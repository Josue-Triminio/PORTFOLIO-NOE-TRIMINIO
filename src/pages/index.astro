---
import Layout from '../layouts/Layout.astro';
import Stack from '../components/Stack.astro';

---

<Layout title="JOSUE PORTFOLIO.">
	<main class="relative ">
	<section class="main_section flex items-center justify-center w-[95%] h-72  mx-auto rounded-md md:w-[80%] mt-10 ">
		<section class="flex flex-col justify-evenly items-center w-[99%]  md:w-[99.5%] h-[98%] p-4  bg-[#273036] text-white  text-xl rounded-md  md:flex-row">
			<div>
				<h3 class="text-2xl md:text-4xl">👋🏻 Soy Noe Triminio</h3>
				<p class="md:text-2xl">Desarrollador de sitios y paginas web adaptables.</p>
				<p class="font-semibold">Web is Powerfull <span class="text-3xl">🚀</span></p>
			</div>
			<div class="flex gap-8 w-full md:w-auto justify-center">
				<a class="mt-5 p-2 bg-white text-[#273036] md:p-1 rounded-md" href="/proyectos">Mis Proyectos</a>
				<a class="mt-5 p-2 bg-white text-[#273036] md:p-1 rounded-md" href="/sobremi">Mas sobre mi</a>
			</div>
		</section>
	</section>
		<Stack />
		
	
	</main>
</Layout>

<style>
	.main_section{
		-webkit-box-shadow: 0px 1px 9px -4px rgba(66, 68, 90, 1);
        -moz-box-shadow: 0px 1px 9px -4px rgba(66, 68, 90, 1);
        box-shadow: 0px 1px 9px -4px rgba(66, 68, 90, 1);
		background: linear-gradient(122deg, rgb(47, 255, 0) 31%, rgb(255, 200, 0) 68%); 
	}
</style>
	