---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
import Nav from '../components/Nav.astro';



---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="developer web portfolio" content="paginas web spa react javascript developer desarrollador frontend portfolio web">
		<link rel="icon" type="image/svg+xml" href="/img/logo.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;300;700;900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="portfolio web developer-javascript portafolio">
		<script src="../js/menu.js"></script>
		<title>{title}</title>
		
	</head>
	<body>
	<div class="relative h-full w-full bg-white"><div class="-z-10 absolute h-[100vh] w-full bg-[radial-gradient(#e5e7eb_1px,transparent_1px)] [background-size:16px_16px] [mask-image:radial-gradient(ellipse_50%_50%_at_50%_50%,#000_70%,transparent_100%)]"></div>
	
	</div>
	<Header />
	<Nav />
	<slot />

		
	</body>
</html>


<style is:global>
	body{
		position: relative;
		font-family: 'Montserrat', sans-serif;
		background-color: rgba(249, 249, 249, 0.433);

	}

	p{
		text-wrap: pretty;
	}
	
</style>

