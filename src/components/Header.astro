import Titulo from "./Titulo.astro"

---

<script>import { sequence } from "astro:middleware"

    const btn_menu = document.querySelector('.btn_menu')
    const nav = document.querySelector('.nav')
    const nav_ul=document.querySelector('.nav_ul')
    const btn_menu2=document.querySelector('.btn_menu2')
    const redes=document.querySelector('.redes')
    

    btn_menu.addEventListener('click',()=>{
        nav.classList.toggle('w-[65%]')
        nav.classList.toggle('lg:w-[25%]')
        nav_ul.classList.add('opacity-[100%]')
        btn_menu2.classList.add('opacity-100')
    })
  

</script>

<header class="header p-4 w-full bg-gray-100 sticky top-0 flex justify-between items-center flex-wrap z-50">
    <div class=" flex justify-center items-center gap-5 md:gap-10 ">
		<a href="https://github.com/Josue-Triminio" target="_blank" rel="noopener noreferrer" class="social">
			<img src="/img/icons/github.svg" class="w-8" alt="icono github">
		</a>
		<a href="https://www.linkedin.com/in/josue-noe-triminio-d%C3%ADaz-543b39289/" target="_blank" rel="noopener noreferrer" class="social">
			<img src="/img/icons/linkedin.svg" class="w-8" alt="icono linkedin">
		</a>
		<a href="https://www.facebook.com/profile.php?id=100052785271790" target="_blank" rel="noopener noreferrer" class="social">
			<img src="/img/icons/facebook.svg" class="w-8" alt="icono facebook">
		</a>
	</div>
    
    <button class="btn_menu mr-5 md:mr-10 flex items-center gap-3">
        <p class=" font-bold text-xl text-black">MENU</p>
        <svg xmlns="http://www.w3.org/2000/svg" class=" w-[3rem] lg:w-[3rem]" fill="black" class="bi bi-list" viewBox="0 0 16 16">
