---
import Redes from './Redes.astro'
---

<script>
  const btn = document.querySelector(".btn");
  const nav = document.querySelector(".nav");

  btn.addEventListener("click", () => {
    nav.classList.toggle("h-[40vh]");
    nav.classList.toggle("opacity-[100%]");
  });
</script>

<button class="btn h-8 w-8 flex justify-center items-center
                border fixed
               top-3 right-12 rounded-full z-50
               lg:hidden">
               <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="white" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5m0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5"/>
              </svg>
</button
>

<nav class="nav w-full h-0 opacity-0 transition
     flex flex-col justify-center items-center 
     gap-10 z-50 overflow-hidden fixed
    text-white lg:hidden">
  <a href="/">INICIO</a>
  <a href="/proyectos">PROYECTOS</a>
  <a href="/sobremi">SOBRE MI</a>

  <Redes />
</nav>

<style>
  .nav {
    background-color: rgba(0, 0, 0, 0.86);
    transition: all .3s ease-in-out;
    backdrop-filter: blur(10px);
  }
</style>
